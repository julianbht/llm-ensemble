{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JudgingExample",
  "description": "Normalized training/eval unit for the ensemble judge. Joins query + document + gold label.",
  "type": "object",
  "required": ["dataset", "query_id", "query_text", "docid", "doc", "gold_relevance"],
  "properties": {
    "dataset": {
      "type": "string",
      "enum": ["llm-judge-2024"],
      "description": "Dataset identifier"
    },
    "query_id": {
      "type": "string",
      "description": "Unique query ID"
    },
    "query_text": {
      "type": "string",
      "description": "The natural language query"
    },
    "docid": {
      "type": "string",
      "description": "Document ID"
    },
    "doc": {
      "type": "string",
      "description": "Document text"
    },
    "gold_relevance": {
      "type": "integer",
      "description": "Ground truth relevance label from dataset"
    }
  }
}
